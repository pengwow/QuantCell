{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QBot",
  "version": "0.1.0",
  "identifier": "com.qbot.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "sh scripts/pre-build.sh && bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "QBot",
        "width": 1400,
        "height": 1000,
        "minWidth": 1024,
        "minHeight": 768,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "externalBin": [
      "binaries/uv"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../backend": "backend"
    }
  }
}
